<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/food"
    android:layout_height="match_parent"
    tools:context="com.example.ridhi.foodorder.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EAT IT"
            style="@style/AlertDialog.AppCompat.Light"
            android:textColor="#ffffff"
            android:textSize="60sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food contains the nutrition that people need to be healthy. The consumption of food is enjoyable to humans. It contains protein, fat, carbohydrates, vitamins, and minerals."
            android:textColor="#ffffff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2">

        <info.hoang8f.widget.FButton
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign In"
            android:onClick="signin"
            android:textColor="#000000"
            app:fButtonColor="@color/colorbutton" />


        <info.hoang8f.widget.FButton
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sign Up"
            android:onClick="signup"
            android:textColor="#000000"
            app:fButtonColor="#a9d440" />


    </LinearLayout>

</RelativeLayout>
